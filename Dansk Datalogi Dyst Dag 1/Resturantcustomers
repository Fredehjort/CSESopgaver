n = int(input())
times = []
for _ in range(n):
	start, end = map(int, input().split())
	times.append((start, 1))
	times.append((end + 1, -1))
times.sort()
curr = 0
at = 0
ppl_change = [0] * (2 * n)
for i in range(2 * n):
	if i == 0:
		times[i] = (0, times[i][1])
	elif times[i][0] > curr:
		at += 1
		curr = times[i][0]
	ppl_change[at] += times[i][1]
ppl_amt = [0] * (2 * n + 1)
for i in range(1, 2 * n + 1):
	ppl_amt[i] = ppl_change[i - 1] + ppl_amt[i - 1]
max_ppl = max(ppl_amt)
print(max_ppl)
